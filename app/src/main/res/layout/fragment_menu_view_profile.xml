<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F8"
    tools:context=".MenuViewProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F6F8"
        android:paddingTop="0dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText"
            android:layout_marginTop="25dp"
            android:paddingBottom="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_bold"
                android:text="Profile"
                android:textColor="@color/grayish"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_container"
                android:orientation="vertical"
                android:padding="20dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_bold"
                    android:text="Personal Information"
                    android:textColor="@color/gray"
                    android:textSize="18sp" />

                <!--first and lastname-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:text="Last Name"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/showLastName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:textColor="@color/grayish"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:text="First Name"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/showFirstName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:textColor="@color/grayish"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

                <!--birthday and sex-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:text="Birthday"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/showBirthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:textColor="@color/grayish"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:text="Sex"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/showSex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

                <!--civil status and contact number-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:text="Civil Status"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/showCivilStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:textColor="@color/grayish"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:text="Contact Number"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/showContactNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:textColor="@color/grayish"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

                <!--Email address-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish_semibold"
                        android:text="Email Address"
                        android:textColor="@color/gray_light"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/showEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish_semibold"
                        android:textColor="@color/grayish"
                        android:textSize="15sp" />
                </LinearLayout>


                <!--Address-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish_semibold"
                        android:text="Address"
                        android:textColor="@color/gray_light"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/showAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish_semibold"
                        android:textColor="@color/grayish"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_container"
                android:orientation="vertical"
                android:padding="20dp"
                android:paddingBottom="15dp">

                <!--first and lastname-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_bold"
                    android:text="Health Information"
                    android:textColor="@color/gray"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:text="Blood Type"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/showBloodType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:text="Age"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/showAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

                <!--birthday and sex-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:text="Weight"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/showWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"

                            android:textColor="@color/gray"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:text="Height"
                            android:textColor="@color/gray_light"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/showHeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_semibold"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>


                <!--Food Allergies-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish_semibold"
                        android:text="Food Allergies"
                        android:textColor="@color/gray_light"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/showFoodAllergies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish_semibold"
                        android:textColor="@color/gray"
                        android:textSize="15sp" />
                </LinearLayout>

                <!--Medical History-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish_semibold"
                        android:text="Medical History"
                        android:textColor="@color/gray_light"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/showMedicalHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish_semibold"
                        android:textColor="@color/gray"
                        android:textSize="15sp" />
                </LinearLayout>


                <!--Surgeries-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish_semibold"
                        android:text="Surgeries"
                        android:textColor="@color/gray_light"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/showSurgeries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish_semibold"
                        android:textColor="@color/gray"
                        android:textSize="15sp" />


                </LinearLayout>

            </LinearLayout>


            <!--Health Information-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_container"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:padding="20dp">

                <!--first and lastname-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish_bold"
                    android:text="Emergency Contact"
                    android:textColor="@color/gray"
                    android:textSize="18sp" />


                <!--Emergency Contact-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/profileImage04"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/minicon_user" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_toEndOf="@+id/profileImage04"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/showEmergencyContactName01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_bold"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grayish"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/showEmergencyContactNum01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/mulish"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <!--Emergency Contact-->
                <LinearLayout
                    android:id="@+id/menuViewProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/profileImage01"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/minicon_user" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_toEndOf="@+id/profileImage01"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/showEmergencyContactName02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mulish_bold"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grayish"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/showEmergencyContactNumber02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/mulish"
                            android:textColor="@color/grayish"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99C2C2C2"
        android:id="@+id/progress_loader02"
        >

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/salmon_dark" />
    </FrameLayout>

</RelativeLayout>
